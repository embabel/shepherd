<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_FILE" value="logs/shepherd.log"/>

    <!-- Console appender: WARN threshold by default -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- Console appender for com.embabel.shepherd: INFO level -->
    <appender name="CONSOLE_SHEPHERD" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender: all INFO logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/shepherd.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- com.embabel.shepherd: INFO to console and file -->
    <logger name="com.embabel.shepherd" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE_SHEPHERD"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="com.embabel.sherlock" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE_SHEPHERD"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Root: INFO to file, WARN to console -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
